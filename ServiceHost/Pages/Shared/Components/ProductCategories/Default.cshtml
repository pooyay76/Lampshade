@model List<LampshadeQuery.Contracts.ProductCategoryAgg.ProductCategoryQueryModel>
<div class="category-area section-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!--=======  category wrapper  =======-->
                <div class="category-wrapper">
                    <div class="row row-10 masonry-category-layout" style="position: relative; height: 543.117px;">
                            @foreach (var category in Model)
                            {
                                <div class="col-lg-4 col-sm-6 grid-item" style="position: absolute; left: 0px; top: 0px;">
                                <!--=======  single category item  =======-->
                                <div class="single-category-item">
                                    <div class="single-category-item__image">
                                        <a asp-page="/ProductCategory">
                                            <img src=@category.Picture alt=@category.PictureAlt title=@category.PictureTitle class="img-fluid">
                                        </a>
                                    </div>
                                    <div class="single-category-item__content">
                                        <h3 class="title">@category.Name</h3>
                                        <a href="shop-left-sidebar.html"><i class="ion-android-arrow-dropleft-circle"></i> Shop Now</a>
                                    </div>
                                </div>
                            <!--=======  End of single category item  =======-->
                                </div>
                            }
                    </div>+
                </div>
                <!--=======  End of category wrapper  =======-->
            </div>
        </div>
    </div>
</div>