@model BlogManagement.Application.Contracts.ArticleCategory.EditArticleCategory;
    <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h5 class="modal-title">ویرایش دسته بندی مقاله</h5>
                </div>
                <div id="modal-body" class="modal-body">
                    <form class="form-group" method="post" asp-page="./Index" asp-page-handler="Edit"
                          data-ajax="true"
                          data-action="refresh"
                          enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-5">

                                <label class="control-label" asp-for="@Model.Name">نام</label>
                                <input class="form-control" asp-for="@Model.Name" onchange="makeSlug('Name','Slug')" type="text" />
                                <span asp-validation-for="@Model.Name" class="text-muted text-danger"></span>
                            </div>

                            <div class="col-md-5">

                                <label class="control-label" asp-for="@Model.Slug">اسلاگ</label>
                                <input class="form-control disabled" asp-for="@Model.Slug" type="text" />
                                <span asp-validation-for="@Model.Slug" class="text-muted text-danger"></span>
                            </div>
                        <div class="col-md-2">

                            <label class="control-label" asp-for="@Model.ShowOrder">ترتیب نمایش</label>
                            <input class="form-control" asp-for="@Model.ShowOrder" type="number" step="1"/>
                            <span asp-validation-for="@Model.ShowOrder" class="text-muted text-danger"></span>
                        </div>

                        </div>
                        <div class="col-md-10">

                            <label class="control-label" asp-for="@Model.Picture">عکس</label>
                            <input class="form-control" asp-for="@Model.Picture" type="file" />
                            <span asp-validation-for="@Model.Picture" class="text-muted text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-5">

                                <label class="control-label" asp-for="@Model.PictureAlt">توصیف عکس</label>
                                <input class="form-control" asp-for="@Model.PictureAlt" type="text" />
                                <span asp-validation-for="@Model.PictureAlt" class="text-muted text-danger"></span>
                            </div>
                            <div class="col-md-5">
                                <label class="control-label" asp-for="@Model.PictureTitle">تیتر عکس</label>
                                <input class="form-control" asp-for="@Model.PictureTitle" type="text" />
                                <span asp-validation-for="@Model.PictureTitle" class="text-muted text-danger"></span>
                            </div>
                        </div>

                        <div class="row">

                            <label class="control-label" asp-for="@Model.Description">توضیحات</label>
                            <input class="form-control" asp-for="@Model.Description" type="text" onchange="fillField('Description', 'MetaDescription')" />
                            <span asp-validation-for="@Model.Description" class="text-muted text-danger"></span>

                        </div>

                        <label class="control-label" asp-for="@Model.MetaDescription"> توضیحات متا</label>
                        <input class="form-control" asp-for="@Model.MetaDescription" type="text" />
                        <span asp-validation-for="@Model.MetaDescription" class="text-muted text-danger"></span>

                        <label class="control-label" asp-for="@Model.Keywords">کلمات کلیدی</label>
                        <input class="form-control disabled" asp-for="@Model.Keywords" type="text" />
                        <span asp-validation-for="@Model.Keywords" class="text-muted text-danger"></span>


                        <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
                            <button type="submit" class="btn btn-primary">ویرایش</button>
                        </div>
                    </form>

                </div>

            </div>
        </div>
    </div>