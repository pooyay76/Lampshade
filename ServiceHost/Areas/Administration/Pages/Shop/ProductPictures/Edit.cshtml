@model ShopManagement.Application.Contracts.ProductPicture.EditProductPicture;
    <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h5 class="modal-title">ویرایش عکس محصول جدید</h5>
                </div>
                <div id="modal-body" class="modal-body">
                    <form class="form-group" method="post" asp-page="./Index" asp-page-handler="Edit"
                          data-ajax="true"
                          data-action="refresh">
                        <div class="row">

                            <div class="col-md-4">

                                <label class="control-label" asp-for="@Model.ProductId">محصول</label>
                                <select class="form-control" asp-for="@Model.ProductId" asp-items='new SelectList(Model.Products,"Id","Name")' type="text">
                                    <option value="0">یک محصول را انتخاب نمایید</option>
                                </select>
                                <span asp-validation-for="@Model.ProductId" class="text-danger"></span>
                            </div>

                            <div class="col-md-8">

                                <label class="control-label" asp-for="@Model.Picture">عکس محصول</label>
                                <input class="form-control" asp-for="@Model.Picture" type="file" />
                                <span asp-validation-for="@Model.Picture" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-7">

                                <label class="control-label" asp-for="@Model.PictureAlt">توصیف عکس</label>
                                <input class="form-control" asp-for="@Model.PictureAlt" type="text" />
                                <span asp-validation-for="@Model.PictureAlt" class="text-danger"></span>
                            </div>

                            <div class="col-md-5">
                                <label class="control-label" asp-for="@Model.PictureTitle">تیتر عکس</label>
                                <input class="form-control" asp-for="@Model.PictureTitle" type="text" />
                                <span asp-validation-for="@Model.PictureTitle" class="text-danger"></span>
                            </div>
                        </div>
                        <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
                            <button type="submit" class="btn btn-primary">ویرایش</button>
                        </div>
                    </form>

                </div>

            </div>
        </div>
    </div>