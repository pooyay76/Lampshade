@using DiscountManagement.Application.Contracts.CustomerDiscount;
@model             DefineCustomerDiscount;

<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title">تعریف تخفیف جدید</h5>
            </div>
            <div id="modal-body" class="modal-body">
                <form class="form-group" method="post" asp-page="./Index" asp-page-handler="Create"
                      data-ajax="true"
                      data-action="refresh">
                    <div class="row">

                        <div class="col-md-3">

                            <label class="control-label" asp-for="@Model.ProductId">نام محصول</label>
                            <select class="form-control" asp-for="@Model.ProductId" asp-items='@Model.Products' type="text">
                                <option value="0">یک محصول را انتخاب نمایید</option>
                            </select>
                            <span asp-validation-for="@Model.ProductId" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">

                            <label class="control-label" asp-for="@Model.DiscountPercentage">درصد تخفیف</label>
                            <input class="form-control" asp-for="@Model.DiscountPercentage" type="number" step="0.01" max="100"/>
                            <span asp-validation-for="@Model.DiscountPercentage" class="text-danger"></span>

                        </div>
                        <div class="col-md-6">

                            <label class="control-label" asp-for="@Model.Reason">علت تخفیف</label>
                            <input class="form-control" asp-for="@Model.Reason" type="text" />
                            <span asp-validation-for="@Model.Reason" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-6">

                            <label class="control-label" asp-for="@Model.StartDate">تاریخ شروع تخفیف</label>
                            <input class="form-control persian-date-input" asp-for="@Model.StartDate" />
                            <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="control-label" asp-for="@Model.EndDate">تاریخ پایان تخفیف</label>
                            <input class="form-control persian-date-input" asp-for="@Model.EndDate" />
                            <span asp-validation-for="@Model.EndDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
                        <button type="submit" class="btn btn-primary">ایجاد</button>
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>
