@model InventoryManagement.Application.Contracts.Inventory.EditInventory;
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title">ویرایش انبار </h5>
            </div>
            <div id="modal-body" class="modal-body">

                <form class="form-group" method="post" asp-page="./Index" asp-page-handler="Edit"
                      data-ajax="true"
                      data-action="refresh">
                    <div class="row">
                        <div class="col-md-12">

                            <label class="control-label" asp-for="@Model.ProductId">محصول</label>
                            <select class="form-control" asp-for="@Model.ProductId" type="text" asp-items="@Model.Products">
                                <option value="0">انتخاب محصول</option>
                            </select>
                            <span asp-validation-for="@Model.ProductId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">

                            <label class="control-label" asp-for="@Model.UnitPrice">قیمت محصول</label>
                            <input placeholder="تومان" class="form-control" asp-for="@Model.UnitPrice" type="number" min="0" max="100000000" step="1" />
                            <span asp-validation-for="@Model.UnitPrice" class="text-danger"></span>
                        </div>
                    </div>
                    <input asp-for="@Model.Id" value="@Model.Id" type="hidden"/>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
                        <button type="submit" class="btn btn-primary">ویرایش</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
